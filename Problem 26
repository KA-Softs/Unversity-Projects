//Calculate factorial of n positive numbers entered by user

#include<iostream>
using namespace std;

int main()
{
    int n,a,f=1;

    cout<<"\nHow many numbers factorial you want : ";
    cin>>n;

    for(int i=1; i<=n; i++)
    {
        cout<<"\n\nEnter number "<<i<<" : ";
        cin>>a;

        for(int j=1; j<=a; j++)
          f=f*j;

        cout<<"\nFactorial of "<<a<<" is : "<<f;  
        f=1;
        
    }

    return 0;
}
